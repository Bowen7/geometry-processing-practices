{
  "$schema": "https://schema.railpack.com",
  "provider": "node",
  "packages": {
    "node": "22",
    "pnpm": "9.0",
    "rust": "1.89"
  },
  "steps": {
    "install": {
      "commands": ["cargo install wasm-pack", "pnpm install"]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": ["wasm-pack build --target web", "pnpm build"]
    }
  }
}
